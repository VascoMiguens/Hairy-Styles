{{#if isOwner}}
<div>
    <img src="/temp/{{image_name}}" alt="image uploaded by user" class="hair-image">
    <form class="form update-project-form">
        <div class="form-group">
            <label for="project-desc">content:</label>
            <textarea class="form-input" id="post-desc-update" name="post-desc-update">{{body}}</textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-sm btn-danger update-post" data-id="{{id}}">UPDATE</button>
            <button class="btn btn-sm btn-danger delete-post" data-id="{{id}}">DELETE</button>
        </div>
    </form>
</div>
{{else}}
<h3>You are not the owner of this post:</h3>
<a href="/profile">Back To Your Profile</a>
{{/if}}

<script src="/js/editPost.js"></script>