            {{#each hairstyles}}
            <option value="{{id}}">{{hairstyle_name}}</option>
            {{/each}}
        </select>
        <button id="searchButton">Search</button>
      </div>
      
      <div></div>
      <ul>
        <li class="nav-elements"><a href="/">Home</a></li>
        <li class="nav-elements"><a href="/newPost">SUBMIT YOUR CUT</a></li>
