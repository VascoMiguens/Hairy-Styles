        {{#if logged_in}}
        <li class="nav-elements"><a href="/profile">Profile</a></li>
        <li class="nav-elements" id="logout"><a href="/">LogOut</a></li>
        {{else}}
        <li class="nav-elements"><a href="/login">SIGN IN</a></li>
        {{/if}}
      </ul>
