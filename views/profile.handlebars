<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h1>Welcome, {{user.username}}</h1>
  {{#if posts.length}}
  <div class="col-md-6 project-list">
    <h3>{{format_plural "Post" posts.length}}</h3>
    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <img src="{{post.image_name}}" alt="image uploaded by user" class="something"/>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<button>New Post</button>

<script src="./js/profile.js"></script>
